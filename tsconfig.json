{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@it-geo-models/*": ["app/common/models/*"],
      "@it-geo-modules/*": ["app/common/modules/*"],
      "@it-geo-factories/*": ["app/common/factories/*"],
      "@it-geo-store/*": ["app/common/store/*"],
      "@it-geo-actions": ["app/common/store/actions"],
      "@it-geo-effects": ["app/common/store/effects"],
      "@it-geo-selectors": ["app/common/store/selectors"],
      "@it-geo-reducers": ["app/common/store/reducers"],
    },
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
